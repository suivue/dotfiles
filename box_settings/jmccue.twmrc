"F8"	= m : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 8"

"r"     = m4 : all	: f.restart    # restart twm
"1"     = m4 : all	: f.iconify    # iconify/deiconify window
"2"     = m4 : all	: f.zoom       # vertical zoom
"3"	= m4 : all	: f.horizoom
"4"	= m4 : all	: f.fullzoom
"q"	= m4 : all	: f.delete     # kill the window
"F1"	= m4 : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 1"
"F2"	= m4 : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 2"
"F3"	= m4 : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 3"
"F4"	= m4 : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 4"
"F5"	= m4 : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 5"
"F6"	= m4 : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 6"
"F7"	= m4 : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 7"
"F8"	= m4 : all	: f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 8"

"Up"     = m4 : all : f.upiconmgr
"Left"   = m4 : all : f.lefticonmgr
"Right"  = m4 : all : f.righticonmgr
"Down"   = m4 : all : f.downiconmgr

"Up"     = c&m : all : f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 prev"
"Left"   = c&m : all : f.exec "~/.twm_themes/bin/vdesk-swap.sh 8 prev"
